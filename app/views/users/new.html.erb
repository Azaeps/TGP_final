<div class="container mt-5 form-group">
	<%= form_tag url_for(action: 'create'), method: "post", class: "new_gossip" do %>
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<%= label_tag 'Prénom' %>
		<%= text_field_tag 'first_name', "", class:"form-control" %>
		<br />
		<%= label_tag 'Nom' %>
		<%= text_field_tag 'last_name', "", class:"form-control" %>
		<br />
		<%= label_tag 'Email' %>
		<%= text_field_tag 'email', "", class:"form-control" %>
		<br />
		<%= label_tag 'Mot de passe' %>
		<%= password_field_tag 'password', "", class:"form-control" %>
		<br />
		<%= submit_tag "Créer l'utilisateur", class:"btn btn-primary"%>
		<% end %>
</div>